@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model CreateProjectViewModel

@{
    ViewData["Title"] = Localizer["Create"];
}

<div id="project-create-nice">
    <div class="container">
        <div class="row">
            <div class="col-xs-3">
                <div id="nice-circle">
                    Nice!
                </div>
            </div>
            <div class="col-xs-9">
                <h1>Copy Needed</h1>
                <p>
                    Would you like to do something about a social or environmental problem? Would you like to lead the crowdacting movement? Start a project on CollAction! 
                    
                    There are a few criteria that your project needs to meet – so please check those here first. We’ll wait while you read it… [link (new tab) to FAQs at the level of “What are the criteria that a project has to meet?”]

                    …All good? Then click here to start your project! [link to Start Project form page (through log in/registration)  
                </p>
            </div>
        </div>
    </div>
</div>

<div id="project-create-starting">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Starting a Project</h1>
                <h4>(It's Super Easy)</h4>
            </div>
        </div>
        <div class="row">
            <div id="project-create-landscape-carousel"></div>
        </div>
    </div>
</div>

<div id="project-create-form">
    <div class="container">
        <div class="row">
            <div class="col-xs-6 col-xs-offset-3">
                <form asp-action="Create">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger" />
                        @Html.ValidationMessage("Name")
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Proposal" class="control-label"></label>
                        <input asp-for="Proposal" class="form-control" />
                        <span asp-validation-for="Proposal" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Goal" class="control-label"></label>
                        <input asp-for="Goal" class="form-control" />
                        <span asp-validation-for="Goal" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"></label>
                        @Html.DropDownList("CategoryId", Model.Categories)
                        <span asp-validation-for="CategoryId" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LocationId" class="control-label"></label>
                        @Html.DropDownList("LocationId", Model.Locations)
                        <span asp-validation-for="LocationId" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Target" class="control-label"></label>
                        <input asp-for="Target" class="form-control" />
                        <span asp-validation-for="Target" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="End" class="control-label"></label>
                        <input asp-for="End" class="form-control" />
                        <span asp-validation-for="End" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatorComments" class="control-label"></label>
                        <input asp-for="CreatorComments" class="form-control" />
                        <span asp-validation-for="CreatorComments" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="DescriptionVideoLink" class="control-label"></label>
                        <input asp-for="DescriptionVideoLink" class="form-control" />
                        <span asp-validation-for="DescriptionVideoLink" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>