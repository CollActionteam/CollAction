@using Microsoft.AspNetCore.Identity


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav class="navbar">
    <div class="container-fluid">
        <div class="navbar-header">
            <div class="navbar-toggle collapsed">
                <div id="navbar-toggler" data-target-id="collaction-menu" data-toggle-class="in"></div>
            </div>
            <div class="logo">
                <partial name="_logo" />
            </div>
        </div>

        <div class="collapse navbar-collapse" id="collaction-menu">
            <ul class="nav navbar-nav">
                <li class="visible-xs"><a asp-controller="Home" asp-action="Undex">Home</a></li>
                <li><a asp-controller="Projects" asp-action="Find">Find Project</a></li>
                <li><a asp-controller="Projects" asp-action="StartInfo">Start Project</a></li>
                <li><a asp-controller="Home" asp-action="About">About</a></li>
            </ul> 
            <ul class="nav navbar-nav navbar-right">
                @if (SignInManager.IsSignedIn(User))
                {
                    @if (User.IsInRole(Constants.AdminRole))
                    {
                        <li><a asp-controller="Admin" asp-action="Index">Admin Dashboard</a></li>
                    }
                    <li><a asp-controller="Manage" asp-action="Index">Account</a></li>
                    <li>
                        <a href='#' onclick='document.forms["logoff"].submit(); return false;'>Logout</a>
                        <form name="logoff" asp-controller="Account" asp-action="LogOff" method="post"></form>
                    </li>
                }
                else
                {
                    <li class="hidden-xs"><a asp-controller="Account" asp-action="Login" class="btn" id="logInBtn">Login</a></li>
                    <li class="visible-xs"><a asp-controller="Account" asp-action="Login">Login</a></li>
                }
            </ul>
        </div>           
    </div>
</nav>