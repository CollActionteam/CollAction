﻿@using Microsoft.ApplicationInsights.AspNetCore
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Identity
@using CollAction.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject JavaScriptSnippet snippet

@{
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var canTrack = consentFeature.CanTrack;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CollAction</title>
    <style>
        body { display: none; }
    </style>

    @RenderSection("styles", required: false)
    @RenderSection("Meta", required: false)
    @Html.Raw(snippet.FullScript)
</head>
<body id="body">
    @if (canTrack) 
    {
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NTCKFKM"
                    height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->
    }

    <div id="header-container">
        <div class="container" id="nav-container">
            <div id="header">
                <div class="row nav-row">
                    <div class="col-md-3 col-xs-12 header-logo">
                        <div class="hidden-md hidden-lg" id="mobile-nav-draw"></div>
                        <partial name="_logo" />
                    </div>
                    <div class="col-md-6 nav-bar hidden-xs hidden-sm">
                        <ul id="header-menu">
                            <li><a asp-controller="Projects" asp-action="Find">Find Project</a></li>
                            <li><a asp-controller="Projects" asp-action="StartInfo">Start Project</a></li>
                            <li><a asp-controller="Home" asp-action="About">About</a></li>
                            @if (User.IsInRole(Constants.AdminRole))
                            {
                            }
                        </ul>
                    </div>
                    <div class="col-md-3 nav-bar hidden-xs hidden-sm" id="header-right">
                        <ul id="account-menu">
                            <li><a asp-controller="Donation" asp-action="Donate" id="donateBtn"><span class="fa fa-heart-o">&nbsp;</span>Donate</a></li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li><a asp-controller="Manage" asp-action="Index">Account</a></li>
                                <li>
                                    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
                                        <input type="submit" value="Logout" id="logOutBtn" />
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li><a asp-controller="Account" asp-action="Login" id="logInBtn">Login</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="header-padding"></div>   
    <partial name="_CookieConsentPartial" /> 
    @RenderBody()
    <partial name="_Footer" />

    @RenderSection("scripts", required: false)
    
    <environment names="Development">
        <script src="~/js/frontend.bundle.js?@DateTime.Now.Ticks.ToString()"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/frontend.bundle.js"></script>
    </environment>
</body>
</html>