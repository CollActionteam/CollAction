<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CollAction</title>

    <environment names="Development">
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" 
              asp-fallback-href="~/lib/font-awesome/css/font-awesome.css" 
              asp-fallback-test-class="fa" asp-fallback-test-property="display" asp-fallback-test-value="inline-block" />
    </environment>
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,700" rel="stylesheet">
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="container">
        <div id="header">
            <div class="row">
                <div class="col-xs-3">
                    @Html.Partial("_Logo")
                </div>
                <div class="col-xs-5 nav-bar" >
                    <ul>
                        <li><a asp-area="" asp-controller="Projects" asp-action="Find">Find Project</a></li>
                        <li><a asp-area="" asp-controller="Projects" asp-action="StartInfo">Start Project</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                        @if (User.IsInRole("admin"))
                        {
                            <li><a asp-area="" asp-controller="Admin" asp-action="Index">Admin Dashboard</a></li>
                        }
                    </ul>
                </div>
                <div class="col-xs-4 nav-bar">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    
    @RenderBody()
    @Html.Partial("_Footer")
    <environment names="Development">
        <script src="~/js/bundle.js?@DateTime.Now.Ticks.ToString()"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/bundle.js"></script>
    </environment>

    @RenderSection("scripts", required: false)

  </body>
</html>
