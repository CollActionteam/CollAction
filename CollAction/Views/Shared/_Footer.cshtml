@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<div id="footer">
  <div class="container">

    <div class="row">
      <div class="col-xs-12">
        @Html.Partial("_Logo")
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 col-xs-12">
        Any questions, comments, or would you like to work together? Awesome! Email us at <a href="mailto:collactionteam@gmail.com">collactionteam@gmail.com</a>
        Would you like to get an occasional update on CollAction and crowdacting? Sign up for our newsletter (to your right)!
      </div>

      <ul class="col-md-2 col-xs-12">
          <li><a asp-controller="Home" asp-action="Index">@Localizer["Home"]</a></li>
          <li><a asp-controller="Projects" asp-action="Find">@Localizer["Find Project"]</a></li>
          <li><a asp-controller="Projects" asp-action="Create">@Localizer["Start Project"]</a></li>
          <li><a asp-controller="Home" asp-action="About" asp-fragment="about-collaction-fragment">@Localizer["About Us"]</a></li>
      </ul>

      <ul class="col-md-2 col-xs-12">
          <li><a asp-controller="Account" asp-action="Login">@Localizer["Login"]</a></li>
          <li><a asp-controller="Account" asp-action="Register">@Localizer["Sign Up"]</a></li>
          <li><a asp-controller="Home" asp-action="About" asp-fragment="about-us-fragment">@Localizer["Mission"]</a></li>
          <li><a asp-controller="Home" asp-action="About" asp-fragment="meet-the-team-fragment">@Localizer["Team"]</a></li>
      </ul>

      <ul class="col-md-1 col-xs-12">
          <li><a asp-controller="Home" asp-action="About" asp-fragment="jobs-fragment">@Localizer["Jobs"]</a></li>
          <li><a asp-controller="Home" asp-action="About" asp-fragment="partners-fragment">@Localizer["Partners"]</a></li>
          <li><a asp-controller="Home" asp-action="About" asp-fragment="press-fragment">@Localizer["Press"]</a></li>
          <li><a asp-controller="Home" asp-action="About" asp-fragment="faq-fragment">@Localizer["FAQs"]</a></li>
      </ul>


      <div class="col-md-3 col-xs-12">
        <h5>@Localizer["Follow Us"]</h5>
        <ul class="social-list">
          <li><a target="_blank" href="https://www.facebook.com/collaction.org/"><i class="fa fa-facebook marginright"></i></a></li>
          <li><a target="_blank" class="twitter-follow-button" href="https://twitter.com/CollAction_org"><i class="fa fa-twitter marginright"></i></a></li>
          <li><a target="_blank" href="https://www.linkedin.com/company-beta/15079855/"><i class="fa fa-linkedin marginright"></i></a></li>
          <li><a target="_blank" href="https://www.youtube.com/channel/UCC2SBF4mbeKXrHqnMuN6Iew/"><i class="fa fa-youtube marginright"></i></a></li>
        </ul>

        <h5>@Localizer["Newsletter"]</h5>

        <!-- Begin MailChimp Signup Form -->
        <div id="mc_embed_signup">
          <form action="//collaction.us14.list-manage.com/subscribe/post?u=48e9b2f8f522cf59b9d5ffa8d&amp;id=2141ab4819" method="post"
            id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
            <div id="mc_embed_signup_scroll">
              <div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
              <div class="mc-field-group">
                <label for="mce-EMAIL">Email Address  <span class="asterisk">*</span></label>
                <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
              </div>
              <div id="mce-responses" class="clear">
                <div class="response" id="mce-error-response" style="display:none"></div>
                <div class="response" id="mce-success-response" style="display:none"></div>
              </div>
              <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
              <div style="position: absolute; left: -5000px;" aria-hidden="true">
                <input type="text" place-holder="E-Mail" name="b_48e9b2f8f522cf59b9d5ffa8d_2141ab4819" tabindex="-1" value="">
              </div>
              <div class="clear">
                <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
              </div>
            </div>
          </form>
        </div>
        <!--End mc_embed_signup-->

      </div>
    </div>
  </div>
</div>
