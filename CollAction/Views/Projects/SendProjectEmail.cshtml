@using CollAction.Models.ProjectViewModels
@using CollAction.Services.Project
@using Microsoft.Extensions.Options

@model SendProjectEmail
@inject IOptions<ProjectEmailOptions> EmailOptions

@{
    ViewData["Title"] = $"Send project e-mail for '{Model.Project.Name}'";
}

<div id="project-email-form">
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <p>
            Hi project starter!
        </p>
        <p>
            You can send @EmailOptions.Value.MaxNumberProjectEmails e-mails in total (during and up to @EmailOptions.Value.TimeEmailAllowedAfterProjectEnd.TotalDays days after the project ends). You have already sent @Model.Project.NumberProjectEmailsSend e-mails, and can still send @Model.EmailsAllowedToSend emails up until @Model.SendEmailsUntil.ToLongDateString() @Model.SendEmailsUntil.ToShortTimeString() in the UTC (London) timezone. To personalize the message, you can add {firstname} and {lastname} to your message (including the brackets) - these will be substituted with the user's first and last name.
        </p>
        <p>
            Warm regards,<br/>
            The CollAction Team
        </p>
        <form asp-controller="Projects" asp-action="SendProjectEmailPerform" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectId" />
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                @Html.ValidationMessage("Subject")
            </div>

            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <div id="project-email-message"></div>
                @Html.HiddenFor(m => m.Message)
                @Html.ValidationMessage("Message")
            </div>

            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}