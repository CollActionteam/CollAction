@using CollAction.Models.ProjectViewModels
@model SendProjectEmail
@{
    ViewData["Title"] = $"Stuur project e-mail voor '{Model.Project.Name}'";
}

<div id="project-email-form">
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <p>
            Je hebt al @Model.Project.NumberProjectEmailsSend e-mails verstuurd, en je kan nog @Model.EmailsAllowedToSend emails versturen tot @Model.SendEmailsUntil. Geen HTML toegestaan, {firstname} en {lastname} zullen vervangen worden door de voor- en achternaam van de gebruiker.
        </p>
        <form asp-controller="Projects" asp-action="SendProjectEmailPerform" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectId" />
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                @Html.ValidationMessage("Subject")
            </div>

            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control" rows="10"></textarea>
                @Html.ValidationMessage("Message")
            </div>

            <div class="form-group">
                <input type="submit" value="Verstuur" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}