@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model IndexViewModel
@{
    ViewData["Title"] = "Manage your account";
    var sample = Model.ProjectsCreated.FirstOrDefault();
}

<h2>@ViewData["Title"].</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change</a>
            }
            else
            {
                <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create</a>
            }
        </dd>
        <dt>External Logins:</dt>
        <dd>

            @Model.Logins.Count <a asp-controller="Manage" asp-action="ManageLogins" class="btn-bracketed">Manage</a>
        </dd>
        <dt>Phone Number:</dt>
        <dd>
            <p>
                Phone Numbers can used as a second factor of verification in two-factor authentication.
                See <a href="http://go.microsoft.com/fwlink/?LinkID=532713">this article</a>
                for details on setting up this ASP.NET application to support two-factor authentication using SMS.
            </p>
            @*@(Model.PhoneNumber ?? "None")
                @if (Model.PhoneNumber != null)
                {
                    <br />
                    <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Change</a>
                    <form asp-controller="Manage" asp-action="RemovePhoneNumber" method="post">
                        [<button type="submit" class="btn-link">Remove</button>]
                    </form>
                }
                else
                {
                    <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Add</a>
                }*@
        </dd>

        <dt>Two-Factor Authentication:</dt>
        <dd>
            <p>
                There are no two-factor authentication providers configured. See <a href="http://go.microsoft.com/fwlink/?LinkID=532713">this article</a>
                for setting up this application to support two-factor authentication.
            </p>
            @*@if (Model.TwoFactor)
                {
                    <form asp-controller="Manage" asp-action="DisableTwoFactorAuthentication" method="post" class="form-horizontal">
                        Enabled <button type="submit" class="btn-link btn-bracketed">Disable</button>
                    </form>
                }
                else
                {
                    <form asp-controller="Manage" asp-action="EnableTwoFactorAuthentication" method="post" class="form-horizontal">
                        <button type="submit" class="btn-link btn-bracketed">Enable</button> Disabled
                    </form>
                }*@
        </dd>

        <dt>Newsletter Subscription:</dt>
        <dd>
            <form asp-controller="Manage" asp-action="NewsletterSubscription" method="post" class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NewsletterSubscription" class="control-label"></label>
                    @Html.CheckBoxFor(m => m.NewsletterSubscription, new { onclick = "this.form.submit();" })
                    @Html.ValidationMessage("NewsletterSubscription")
                </div>
            </form>
        </dd>

        <dt>Projects You've Subscribed To:</dt>

        <dd>
        @if (Model.ProjectsParticipated.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => sample.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Goal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Target)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Start)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.End)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model.ProjectsParticipated)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(content => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Goal)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Target)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Start)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.End)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>
                You are not currently participating in any projects. Subscribe by
                browsing the @Html.ActionLink("Project List", "Index", "Projects")
                or by using the @Html.ActionLink("Find Project", "Find", "Projects") page.
            </p>
        }
        </dd>

        <dt>Projects You've Created:</dt>

        <dd>
        @if (Model.ProjectsCreated.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => sample.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Goal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Target)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.Start)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => sample.End)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model.ProjectsCreated)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(content => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Goal)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Target)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.Start)
                            </td>
                            <td>
                                @Html.DisplayFor(content => item.End)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="Projects" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-controller="Projects" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-controller="Projects" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>
                You have not yet created any projects. Create a project by using the
                @Html.ActionLink("Start Project", "StartInfo", "Projects") page.
            </p>
        }
        </dd>
    </dl>
</div>

@section Scripts {
    @{ Html.RenderPartial("_ValidationScriptsPartial"); }
}
