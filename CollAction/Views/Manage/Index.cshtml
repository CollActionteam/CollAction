@using Microsoft.AspNetCore.Mvc.Localization
@using CollAction.Services

@inject IViewLocalizer Localizer
@inject IProjectService ProjectService

@model IndexViewModel
@{
    ViewData["Title"] = "Beheer jouw account";
}

<div id="manage-index">    
    <div class="container">
        <h2>@ViewData["Title"].</h2>
         <h2>@ViewData["Title"]</h2>
        <p class="text-success">@Model.StatusMessage</p>
        </br>
         <div class="row">
            <div class="container">
                 <div class="panel panel-default">
                        <div class="panel-heading"><dt>Wachtwoord:</dt></div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <form asp-controller="Manage" asp-action="ChangePassword" method="get">
                                        <input class="symetric_buttons" type="submit" value="Verander wachtwoord" />
                                    </form>
                                    </div>
                                <div class="col-md-9"></div>
                            </div>
                        </div>
                </div>
             </div>
        </div>
         <br/><br/>
         <div class="row">
            <div class="container">
                <div class="panel panel-default">
                        <div class="panel-heading"><dt>Nieuwsbrief:</dt></div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                        <form asp-controller="Manage" asp-action="NewsletterSubscription" method="post" class="form-horizontal">
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <input type="hidden" asp-for="NewsletterSubscription" value="@(!Model.NewsletterSubscription)" />
                                            @Html.ValidationMessage("NewsletterSubscription")
                                            @if (Model.NewsletterSubscription)
                                            {
                                                <input type="submit" value="Unsubscribe from newsletter" />
                                            } else
                                            {
                                                <input type="submit" value="Subscribe to newsletter" />
                                            }
                                        </form>
                                    </div>
                                <div class="col-md-9"></div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
         <br/><br/>
         <div class="row">
            <div class="container">
                <div class="panel panel-default">
                        <div class="panel-heading"><dt>Verwijder</dt></div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="alert alert-warning" role="alert"><dt>Verwijder account (Waarschuwing: Je verwijderd je gegevens permanent hiermee!)</dt></div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                        <form asp-controller="Account" asp-action="Delete" method="post">
                                            <input class="symetric_buttons" type="submit" value="Verwijder" />
                                        </form>
                                    </div>
                                <div class="col-md-9"></div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
        <br/>
         <div class="row">
             <div class="panel panel-default">
                    <div class="panel-heading"><dt>Projecten waar je aan mee doet:</dt></div>
                    <div class="panel-body">
                        @if (Model.ProjectsParticipated.Any())
                        {
                            <ul class="list-group">
                                @foreach (var item in @Model.ProjectsParticipated)
                                {
                                    <li class="list-group-item">
                                        <a asp-action="Details" asp-controller="Projects" asp-route-id="@item.Id">@item.Name</a> - <a asp-action="ChangeSubscriptionFromAccount" asp-controller="Projects" asp-route-id="@item.Id">Verander je project-email voorkeurenerander je project-email voorkeuren</a>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>
                                Je doet op dit moment aan geen enkel project mee.
                            </p>
                        }
                    </div>
            </div>
         </div>
        <br/>
         <div class="row">
             <div class="panel panel-default">
                    <div class="panel-heading"><dt>Projecten die je hebt aangemaakt:</dt></div>
                    <div class="panel-body">
                        @if (Model.ProjectsCreated.Any())
                        {
                            <ul class="list-group">
                                @foreach (var item in @Model.ProjectsCreated)
                                {
                                    <li class="list-group-item">
                                        @if (item.Status != ProjectStatus.Deleted && item.Status != ProjectStatus.Hidden)
                                        {
                                            <a asp-action="Details" asp-controller="Projects" asp-route-id="@item.Id">@item.Name</a>
                                        } else
                                        {
                                            <span>@item.Name</span>
                                        }
                                         @if (ProjectService.CanSendProjectEmail(item))
                                        {
                                        <span> - </span><a asp-action="SendProjectEmail" asp-controller="Projects" asp-route-id="@item.Id">Verstuur project-email voor @item.Name</a>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>
                                 Je hebt geen projecten aangemaakt.
                            </p>
                        }
                    </div>
            </div> 
        </div>
        <br/>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
