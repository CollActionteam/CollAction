@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Verander wachtwoord";
}

<div id="change-password">
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" />
                @Html.ValidationMessage("OldPassword")
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                @Html.ValidationMessage("NewPassword")
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                @Html.ValidationMessage("ConfirmPassword")
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Verander wachtwoord" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ Html.RenderPartial("_ValidationScriptsPartial"); }
}
