@using Microsoft.AspNetCore.Mvc.Localization
@using CollAction.Services;
@using Microsoft.AspNetCore.Http.Features

@inject IViewLocalizer Localizer
@inject IFestivalService FestivalService

@{
    ViewData["Title"] = Localizer["Home Page"];
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var canTrack = consentFeature.CanTrack;
}

@section Meta {
    <meta name="description" content="Do you want to make the world a better place, but do you sometimes feel that your actions are only a drop in the ocean? Well, not anymore, because we are introducing crowdacting: taking action knowing that you are one of many. We revamp the neighbourhood with a hundred people or switch to renewable energy with thousands at the same time. Find out more about crowdacting, take action collectively with one of the existing projects, or start your own crowdacting project." />
    <meta property="og:url" content="http://collaction.org" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="Collaction" />
    <meta property="og:description" content="Do you want to make the world a better place, but do you sometimes feel that your actions are only a drop in the ocean? Well, not anymore, because we are introducing crowdacting: taking action knowing that you are one of many. We revamp the neighbourhood with a hundred people or switch to renewable energy with thousands at the same time. Find out more about crowdacting, take action collectively with one of the existing projects, or start your own crowdacting project." />
    <meta property="og:image" content="http://collaction.org/images/front-page.jpg" />
}

<div id="index">
    @if (FestivalService.CallToActionsVisible)
    {
        <div id="festival-banner">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <p>Our Make The World Great Again Crowdacting Festival is coming up! <a class="btn" asp-controller="Home" asp-action="CrowdActingFestival">Read more</a></p>
                    </div>                
                </div>
            </div>
        </div>
        <div id="festival-banner-mobile">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <p>Our Make The World Great Again Crowdacting Festival is coming up!</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <a class="btn" asp-controller="Home" asp-action="CrowdActingFestival">Read more</a>
                    </div>
                </div>
            </div>
        </div>
    }
    <div id="banner-title" class="banner">
        <div class="dotbackground">
            <div class="container">
                <div class="row" id="title-row">
                    <div class="col-xs-12">
                        <h1>@Localizer["POWER TO THE CROWD"]</h1>
                    </div>
                </div>
                <div class="row" id="link-row">
                    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-2 col-md-offset-4">
                        <a class="banner-link" asp-area="" asp-controller="Projects" asp-action="Find">
                            @Localizer["Find Project"]
                        </a>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-2 col-md-offset-0">
                        <a class="banner-link" asp-area="" asp-controller="Projects" asp-action="StartInfo">
                            @Localizer["Start Project"]
                        </a>
                    </div>
                </div>
            </div>

            <div id="down-arrow">

            </div>
        </div>

    </div>

    <div id="intro-text">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h3>
                        Do you want to make the world a better place, but do you sometimes feel that your actions are only a drop in the ocean?
                    </h3>
                    <p>
                        Well, not anymore, because we are introducing crowdacting: taking action knowing that you are one of many. We revamp the neighbourhood with a hundred people or switch to renewable energy with thousands at the same time. <a href="/About">Find out more about crowdacting</a>, take action collectively with one of the existing projects, or <a href="/Start">start your own crowdacting project</a>. 
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div id="three-steps">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h2>@Localizer["Crowdacting in 3 steps"]</h2>
                </div>

                <div class="col-xs-12 col-md-4">
                    <object class="three-step-image" type="image/svg+xml" data="/images/step1.svg">
                        Your browser does not support SVG
                    </object>
                    <h3>@Localizer["Proposal"]</h3>
                    <p>
                        @Localizer["Someone proposes a collective action and sets a target number of participants and a deadline"]
                    </p>
                </div>

                <div class="col-xs-12 col-md-4">
                    <object class="three-step-image" type="image/svg+xml" data="/images/step2.svg">
                        Your browser does not support SVG
                    </object>
                    <h3>@Localizer["Crowd"]</h3>
                    <p>
                        @Localizer["Supporters pledge to join if the target is met before the deadline"]
                    </p>
                </div>

                <div class="col-xs-12 col-md-4">
                    <object class="three-step-image" type="image/svg+xml" data="/images/step3.svg">
                        Your browser does not support SVG
                    </object>
                    <h3>@Localizer["Act"]</h3>
                    <p>
                        @Localizer["When the target number of supporters is met, we all act!"]
                    </p>
                </div>

            </div>
        </div>
    </div>

    <div id="project-actions">
        <div class="container">
            <div class="row project-action-buttons">
                <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                    <a class="project-actions-link" asp-area="" asp-controller="Projects" asp-action="StartInfo">
                        @Localizer["Starting a Project"]
                    </a>
                </div>
                <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                    <a class="project-actions-link" asp-area="" asp-controller="Projects" asp-action="Find">
                        @Localizer["Browse Projects"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="join-a-project">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h3>Join A Project</h3>
                </div>
            </div>

            <div class="row">
                <div id="projects-container"> 
                </div>
            </div>
        </div>
    </div>

    <div id="project-create-starting" class="hidden-xs">
        <div class="container">
            <div class="row">
                <div id="project-create-landscape-carousel"></div>
            </div>
        </div>
    </div>

    @if (canTrack)
    {
        <div id="project-share">
            <div class="container">
                <div class="row">
                    <div id="homepage-share-buttons"></div>
                </div>
            </div>
        </div>
    }
</div>